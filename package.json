{
  "name": "typescript-api-template",
  "version": "0.0.0",
  "description": "Typescript + Babel 7 + Jest + Lint template",
  "main": "lib/index.js",
  "repository": "git@github.com:adilsoncarvalho/typescript-api-template.git",
  "author": "Adilson Carvalho <lc.adilson@gmail.com>",
  "private": true,
  "scripts": {
    "build": "yarn build:types && yarn build:js",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "babel src --out-dir lib --extensions \".ts,.tsx\" --source-maps inline",
    "test": "jest --detectOpenHandles",
    "test:coverage": "jest --detectOpenHandles --coverage",
    "test:watch": "jest --detectOpenHandles --watch",
    "test:watch:all": "jest --detectOpenHandles --watch --all",
    "pretty": "pretty-quick",
    "start": "nodemon",
    "start:babel": "babel-node --extensions \".ts,.tsx\" src/server.ts",
    "type-check": "tsc --noEmit",
    "type-check:watch": "yarn type-check --watch",
    "tslint": "tslint 'src/**/*.ts'",
    "pretslint": "yarn type-check",
    "tslint:fix": "tslint --fix 'src/**/*.ts'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "resolutions": {
    "babel-core": "^7.0.0-bridge.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/node": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/plugin-transform-regenerator": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-typescript": "^7.1.0",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.5",
    "@types/morgan": "^1.7.35",
    "@types/node": "^10.11.7",
    "@types/supertest": "^2.0.6",
    "babel-core": "^7.0.0-bridge.0",
    "husky": "^1.1.2",
    "jest": "^23.6.0",
    "morgan": "^1.9.1",
    "nodemon": "^1.18.4",
    "prettier": "^1.14.3",
    "pretty-quick": "^1.7.0",
    "supertest": "^3.3.0",
    "ts-jest": "^23.10.4",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.1.2"
  },
  "dependencies": {
    "@babel/polyfill": "^7.0.0",
    "express": "^4.16.4"
  }
}
